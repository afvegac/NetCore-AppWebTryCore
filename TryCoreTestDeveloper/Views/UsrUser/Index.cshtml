@model IEnumerable<TryCoreTestDeveloper.Models.UsrUsuarioModel>

@{
    ViewData["Title"] = "Lista de Usuarios";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Usuarios</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="UsrUser">Agregar Usuario</a>
        </div>    
    </div>
    <div class="row">
        @if(Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.Codigo)</td>
                        <td>@Html.DisplayNameFor(m => m.Descripcion)</td>
                        <td>@Html.DisplayNameFor(m => m.Direccion)</td>
                        <td>@Html.DisplayNameFor(m => m.Identificacion)</td>
                        <td>@Html.DisplayNameFor(m => m.MonedaId)</td>
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Codigo</td>
                            <td>@item.Descripcion</td>
                            <td>@item.Direccion</td>
                            <td>@item.Identificacion</td>
                            <td>@item.MonedaId</td>
                            <td>
                                <a asp-action="Edit" asp-controller="UsrUser" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                                <a asp-action="Delete" asp-controller="UsrUser" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            
        }
    </div>

</div>